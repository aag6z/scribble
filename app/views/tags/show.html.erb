<% @counter = 0 %>
<% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    <% if @counter == 0 %>  <h4 style="margin-bottom: 15px;">#<%= @tag.tagtext %></h4> <% @counter = 1 %> <% end %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to "#{post.title}", post_path(post) %></h3>
        </div>
        <div class="panel-body">
          <p><%= post.text %></p>
          <p id="byline"> by <%= post.user.username %></p>
          <h6><% (post.tags).each do |tag| %><span> <%= link_to "##{tag.tagtext}", tag_path(tag) %></span><% end %></h6>
        </div>

        <div class="well">
          <p>comments</p>
          <% (post.comments).each do |comment| %>
          <div id="comment">
            <%= comment.text %> <div id="byline"><%=comment.user.username %></div>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  <div class="col-md-4"></div>
</div>
<% end %>
